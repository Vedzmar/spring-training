<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:component-scan base-package="com.epam.training.spring" />

    <bean id="id3" name="discountService"  class="com.epam.training.spring.services.impl.DiscountServiceImpl" />
    <bean name="bookingService" class="com.epam.training.spring.services.impl.BookingServiceImpl">
        <constructor-arg ref="discountService"/>
    </bean>

</beans>